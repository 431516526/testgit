    <bean id="commandDao" class="com.jxd.dao.impl.CommandDaoImpl"></bean>
    &lt;!&ndash;让spring帮我们管理CommandServiceImpl&ndash;&gt;
    <bean id="commandService" scope="singleton" class="com.jxd.service.impl.CommandServiceImpl">
